  if (hotfix_cves_check(cve_list))
  {
    audit(AUDIT_PATCH_INSTALLED, "kpatch hotfix for ALASKERNEL-5.4-2022-019");
  }
  else
  {
    __rpm_report = hotfix_reporting_text();
  }
}
